import random

def number_guessing_game():
    hidden_number = random.randint(1,1000)
    attempts = 0
    max_attempts = 10
    print("Welcoming to the guessing game, guessa number between 1 and 1000 in your 10 given attempts: ")
    
    while guess_number < max_attempts:
        try:
            guess_number = int(input("Enter your guess:"))
            attempts += 1
            if guess_number < hidden_number:
                    print("Number to low, try a higher number")
            elif guess_number > hidden_number:
                    print("Number to high, try a lower number")
            else:
                    print(f"Yoo guessed the hidden number in {attempts} attempts")
                    break
        except ValueError:
                print("Invalid input, enter a sufficient number")
if __name__ == "__main__":
    number_guessing_game()