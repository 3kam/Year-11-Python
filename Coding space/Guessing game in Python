import random

def number_guessing_game():
    # Generates a random number between 1 and 1000
    hidden_number = random.randint(1, 1000)
    attempts = 0
    max_attempts = 10

    print("Welcome to the guessing game! Try to guess a number between 1 and 1000. You’ve got 10 attempts.")

    while attempts < max_attempts:
        try:
            guess_number = int(input("Enter your guess: "))
            attempts += 1

            # Give feedback on the guess
            if guess_number < hidden_number:
                print("Too low, try a higher number.")
            elif guess_number > hidden_number:
                print("Too high, try a lower number.")
            else:
                print(f"You guessed the hidden number in {attempts} attempts. Well done!")
                break  # Exit loop if guessed correctly

        except ValueError:
            # Handle only for integar input
            print("Invalid input. Please enter a whole number.")

    # Message to user who runs out of attempts
    if attempts == max_attempts and guess_number != hidden_number:
        print(f"Bad luck! You’ve used all {max_attempts} attempts. The hidden number was {hidden_number}.")

# Entry point for the game
if __name__ == "__main__":
    number_guessing_game()
